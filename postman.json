    {
      "name": "Ingest (Agent Token)",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status is 200', function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "",
              "const data = pm.response.json();",
              "pm.test('Ingest response has expected fields', function () {",
              "  pm.expect(data).to.have.property('ok', true);",
              "  pm.expect(data).to.have.property('server_id');",
              "  pm.expect(data).to.have.property('alerts_created');",
              "  pm.expect(data).to.have.property('logs_inserted');",
              "  pm.expect(data.alerts_created).to.be.an('array');",
              "  pm.expect(data.logs_inserted).to.be.a('number');",
