            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"{{uptimeMonitorName}}\",\n  \"url\": \"{{uptimeMonitorUrl}}\",\n  \"check_interval_sec\": 30,\n  \"timeout_sec\": 10,\n  \"expected_status\": 200\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/v1/uptime-monitors",
              "host": [
